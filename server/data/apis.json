{
  "auth": {
    "title": "인증 API",
    "description": "사용자 인증 및 계정 관리 관련 API",
    "color": "#3b82f6",
    "apis": [
      {
        "id": "auth-login",
        "name": "로그인",
        "method": "POST",
        "endpoint": "/api/auth/login",
        "description": "전화번호 또는 소셜 계정으로 로그인",
        "authentication": false,
        "request": {
          "body": {
            "phone": {
              "type": "string",
              "required": true,
              "description": "전화번호 (하이픈 제외)",
              "example": "01012345678"
            },
            "password": {
              "type": "string",
              "required": true,
              "description": "비밀번호",
              "example": "password123"
            }
          }
        },
        "response": {
          "200": {
            "description": "로그인 성공",
            "example": {
              "success": true,
              "data": {
                "user": {
                  "id": "uuid",
                  "name": "홍길동",
                  "username": "hong123",
                  "phone": "01012345678"
                },
                "token": "session_token_here"
              }
            }
          },
          "401": {
            "description": "인증 실패",
            "example": {
              "success": false,
              "error": "전화번호 또는 비밀번호가 일치하지 않습니다."
            }
          }
        }
      },
      {
        "id": "auth-register",
        "name": "회원가입",
        "method": "POST",
        "endpoint": "/api/auth/register",
        "description": "신규 회원 가입",
        "authentication": false,
        "request": {
          "body": {
            "name": {
              "type": "string",
              "required": true,
              "description": "이름",
              "example": "홍길동"
            },
            "username": {
              "type": "string",
              "required": true,
              "description": "사용자명 (고유)",
              "example": "hong123"
            },
            "phone": {
              "type": "string",
              "required": true,
              "description": "전화번호",
              "example": "01012345678"
            },
            "password": {
              "type": "string",
              "required": true,
              "description": "비밀번호",
              "example": "password123"
            },
            "gender": {
              "type": "enum",
              "required": true,
              "values": ["male", "female", "none"],
              "description": "성별",
              "example": "male"
            },
            "birth_date": {
              "type": "date",
              "required": true,
              "description": "생년월일",
              "example": "1990-01-01"
            }
          }
        },
        "response": {
          "201": {
            "description": "회원가입 성공",
            "example": {
              "success": true,
              "data": {
                "userId": "uuid-here",
                "message": "회원가입이 완료되었습니다."
              }
            }
          }
        }
      },
      {
        "id": "auth-logout",
        "name": "로그아웃",
        "method": "POST",
        "endpoint": "/api/auth/logout",
        "description": "사용자 로그아웃 (세션 종료)",
        "authentication": true,
        "response": {
          "200": {
            "description": "로그아웃 성공",
            "example": {
              "success": true,
              "message": "로그아웃되었습니다."
            }
          }
        }
      },
      {
        "id": "auth-verify-phone",
        "name": "전화번호 인증",
        "method": "POST",
        "endpoint": "/api/auth/verify-phone",
        "description": "SMS 인증 코드 발송 및 확인",
        "authentication": false,
        "request": {
          "body": {
            "phone": {
              "type": "string",
              "required": true,
              "description": "인증할 전화번호",
              "example": "01012345678"
            },
            "code": {
              "type": "string",
              "required": false,
              "description": "인증 코드 (확인 시)",
              "example": "123456"
            }
          }
        },
        "response": {
          "200": {
            "description": "인증 성공",
            "example": {
              "success": true,
              "message": "인증이 완료되었습니다."
            }
          }
        }
      },
      {
        "id": "auth-social-naver",
        "name": "네이버 소셜 로그인",
        "method": "GET",
        "endpoint": "/api/auth/naver",
        "description": "네이버 OAuth 로그인",
        "authentication": false
      },
      {
        "id": "auth-social-kakao",
        "name": "카카오 소셜 로그인",
        "method": "GET",
        "endpoint": "/api/auth/kakao",
        "description": "카카오 OAuth 로그인",
        "authentication": false
      }
    ]
  },
  "registrations": {
    "title": "사전접수 API",
    "description": "사전 참가 신청 관련 API",
    "color": "#10b981",
    "apis": [
      {
        "id": "registration-create",
        "name": "신청 생성",
        "method": "POST",
        "endpoint": "/api/registrations",
        "description": "새로운 사전접수 신청 생성",
        "authentication": true,
        "request": {
          "body": {
            "participant_type": {
              "type": "enum",
              "required": true,
              "values": ["citizen", "single-parent", "self-help", "volunteer", "organization"],
              "description": "참가자 유형",
              "example": "citizen"
            },
            "companions": {
              "type": "number",
              "required": true,
              "description": "동반 인원 수",
              "example": 2
            },
            "program_ids": {
              "type": "array",
              "required": true,
              "description": "참여 프로그램 ID 목록",
              "example": ["prog-1", "prog-2"]
            },
            "meal_option": {
              "type": "string",
              "required": false,
              "description": "식사 옵션",
              "example": "lunch"
            }
          }
        },
        "response": {
          "201": {
            "description": "신청 성공",
            "example": {
              "success": true,
              "data": {
                "registration_number": "MH2025-000001",
                "id": "uuid"
              }
            }
          }
        }
      },
      {
        "id": "registration-list",
        "name": "신청 목록",
        "method": "GET",
        "endpoint": "/api/registrations",
        "description": "사전접수 신청 목록 조회",
        "authentication": true,
        "request": {
          "query": {
            "page": {
              "type": "number",
              "required": false,
              "default": 1,
              "description": "페이지 번호"
            },
            "limit": {
              "type": "number",
              "required": false,
              "default": 20,
              "description": "페이지당 항목 수"
            },
            "search": {
              "type": "string",
              "required": false,
              "description": "검색어 (이름, 전화번호)"
            }
          }
        },
        "response": {
          "200": {
            "description": "목록 조회 성공",
            "example": {
              "success": true,
              "data": {
                "items": [],
                "total": 100,
                "page": 1,
                "totalPages": 5
              }
            }
          }
        }
      },
      {
        "id": "registration-detail",
        "name": "신청 상세",
        "method": "GET",
        "endpoint": "/api/registrations/:id",
        "description": "개별 신청 상세 조회",
        "authentication": true,
        "response": {
          "200": {
            "description": "조회 성공",
            "example": {
              "success": true,
              "data": {
                "id": "uuid",
                "registration_number": "MH2025-000001",
                "participant_type": "citizen",
                "companions": 2,
                "status": "confirmed"
              }
            }
          }
        }
      },
      {
        "id": "registration-cancel",
        "name": "신청 취소",
        "method": "DELETE",
        "endpoint": "/api/registrations/:id",
        "description": "사전접수 신청 취소",
        "authentication": true,
        "response": {
          "200": {
            "description": "취소 성공",
            "example": {
              "success": true,
              "message": "신청이 취소되었습니다."
            }
          }
        }
      }
    ]
  },
